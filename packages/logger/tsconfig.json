{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "rootDir": "../../",
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/dist", "**/node_modules", "**/*.test.ts", "**/*.spec.ts"]
}
