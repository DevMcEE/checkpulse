{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "rootDir": "../../",
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "paths": {
      "@checkpulse/logger": ["../../packages/logger/src"],
      "@checkpulse/*": ["../../packages/*/src"]
    }
  },
  "include": ["src/**/*", "../../packages/**/*"],
  "exclude": ["**/dist", "**/node_modules"]
}
